// Create a function will calculate a student degrees for 6 subjects,
//if the average was less than 70 will print (F)
// Over 70 and less than 80 (C)
// Over than 80 and less than 85 (B)
// Over than 85 and less than 90 (A)
// And over 90 print (A+)

function grades() {
  let grade = 70;

  if (grade >= 100) {
    console.log("A+");
  } else if (grade >= 90) {
    console.log("A");
  } else if (grade >= 85) {
    console.log("B");
  } else if (grade >= 80) {
    console.log("C");
  } else if (grade >= 75) {
    console.log("D");
  } else {
    console.log("F");
  }
}
grades();

